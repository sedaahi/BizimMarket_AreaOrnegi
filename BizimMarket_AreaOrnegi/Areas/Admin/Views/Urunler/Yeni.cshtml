@model YeniUrunViewModel

@{
    ViewBag.Title = "Yeni Ürün";
}

@*YeniUrunViewModel kullanabilmek için Adminin View importuna ekle =>@using BizimMarket_AreaOrnegi.Areas.Admin.Models*@

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            @*enctype="multipart/form-data"*@

            <div class="mb-3">
                <label asp-for="Ad">Ad</label>
                <input asp-for="Ad" type="text" class="form-control" />
                <span asp-validation-for="Ad" class="form-text"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Fiyat">Fiyat</label>
                <input asp-for="Fiyat" type="text" class="form-control" />
                <span asp-validation-for="Fiyat" class="form-text"></span>
            </div>
            <div class="mb-3">
                <label asp-for="KategoriId" class="form-label">Kategori</label>
                <select asp-for="KategoriId" asp-items="ViewBag.Kategoriler" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="KategoriId" class="form-text"></span>   @*HATA MESAJI VERMEK İÇİN*@
                @*@Html.ValidationMessageFor(x=>x.KategoriId)  =====>YA DA*@
            </div>

            <div class="mb-3">
                <label asp-for="Resim" class="form-label">Ürün Görseli</label>
                <input type="file" asp-for="Resim" class="form-control" />
                <span asp-validation-for="Resim" class="form-text"></span>
            </div>

            <button class="btn btn-primary">Ekle</button>
        </form>
    </div>
</div>

